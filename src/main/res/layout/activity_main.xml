<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffebdfa1"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/isaludable"
        android:contentDescription="iSaludable" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenido!"
        android:id="@+id/textView"
        android:textColor="#ffa06455"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="iSaludable es una aplicación que te ayudará a ti y a tu familia a llevar una vida más sana en todo lo relacionado con nutrición.
Podrás llevar el control de lo que comen, ver estadísticas, metas, consejos y muchas cosas más..."
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Comencemos?"
        android:textColor="#ffb57750"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="25dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="250dp"
        android:textColor="#ff2f8100"
        android:background="#ff4fda00"
        android:layout_height="wrap_content"
        android:text="Comenzar a mejorar!"
        android:id="@+id/button"
        android:onClick="ToIMenu"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="250dp"
        android:textColor="#ff807c81"
        android:background="#ffd7cfda"
        android:layout_height="wrap_content"
        android:text="Integrantes"
        android:id="@+id/button2"
        android:onClick="ToIntegrants"
        android:layout_below="@+id/textView3"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


</RelativeLayout>
